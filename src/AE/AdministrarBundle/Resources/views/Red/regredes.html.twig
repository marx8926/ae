             <script type="text/javascript">
                
    
                $(document).ready(function(){
           
              
                
                $.getJSON('{{path('servicio_iglesia')}}',iglesias);
                
                 //lista de departamentos
                  $.ajax(
                    {url : '{{path('servicio_region')}}',
                     dataType:"json",
                     type: "POST",
                     async: false,
                    }
                    ).done(departamentos);
                
                 //cambio de departamento
                 $("#departamento_lista").change(recarga_provincias);
                  
                  //cambio de provincia
                 $("#provincia_lista").change(recarga_distritos);
                 
    
                //lideres
                var route = '{{path('servicio_lista_lideres')}}';            
                       
                        $.ajax(
                            {   url : route,
                                dataType:"json",
                                type: "POST",
                                async: false,
                            }
                        ).done(lideres);
                            
                 //persona
                 $('#ids').change(persona);
                 
    
                 $("#tip_red").change(recarga_id);
                 
    
                 var x =$("login");
                    x.click();
           
