                </div>
                
                

            </fieldset>
                 
             <fieldset> 
                <legend>Lider</legend>
                <div class="control-group">
                <label>Añadir</label>
                    <div class="controls">
                         <select id="tip_red" name="tip_red" >
                                <option value="0">Lider de red</option>
                                <option value="1">Pastor asociado</option>
                            </select>
                    </div>
                </div>
                
                <div class="control-group">
                    <label>ID</label>
                    <div class="controls">
                        <select id="ids" name="ids" >
                        
                        </select>
                    </div>
                </div>
                
                <div class="control-group" >
                    <label class="control-label"> Nombres </label>
                    <div class="controls">
                        <input pattern="^[a-zA-Z]'?([a-zA-Z]|\.| |-)+$" type="text" id="inputNombres" name="inputNombres" placeholder="Nombres" class="input-xxlarge">
                    </div>
                </div>
        
                <div class="control-group" >
                    <label class="control-label">Apellidos</label>
                    <div class="controls">
                        <input type="text" id="inputApellidos" name="inputApellidos" placeholder="Apellidos" class="input-xxlarge" pattern="^[a-zA-Z]'?([a-zA-Z]|\.| |-)+$">
                    </div>
                </div>
                
                
            </fieldset>
                <div class="control-group">
                    <label></label>
                    <div class="controls">
                        <input class="btn btn-small btn-primary" type="submit" name="login" id="login" />
                    </div>
                </div>
            
            </form>
            <div id="output"></div>
        
            </div>
