 {%block javascript %}
    <script type="text/javascript">

        var ident = -1;
         
	$(document).ready(function() {
            
            $("#wrap").css({"display":"none"});
          
            $("#myForm").submit(function(){
                             
                    //get the url for the form
                    var url=$("#myForm").attr("action");
                     
                    console.log($("#myForm").serialize());
                    //start send the post request
                    $.post(url,{
                        formName:$("#myForm").serialize(),
                        other:"attributes"
                    },function(data){
                    //the response is in the data variable
               
                    if(data.responseCode==300 ){           
                      
                        
                        var href="{{path('main')}}";
                        
                        iden = data.id ;
                        
                        $("#lechesp").text(iden); $("#lechesp").val(iden);
                        
    
                        $('#nombre').attr('disabled', '');
                        $('#inputDescripcion').attr('disabled', '');
                        $('#inputFecha').attr('disabled', '');
                        $('#inputClases').attr('disabled', '');

                        add_lines();
             
                        //$(location).attr('href',href); 
                    }
                    else if(data.responseCode==400){//bad request
                       alert('Error bad request');
                        }
                    else{                        
                        if(data.responseCode==500)
                        {
                            alert('Error bad request');
                        }
                        else alert("An unexpeded error occured.");
                        }
                    }
                    );
                    return false;});
        });
        
        $("#leche").submit(function(){
                       
                    //get the url for the form
                    var url=$("#leche").attr("action");
                     
                    console.log($("#leche").serialize());
                    //start send the post request
                    $.post(url,{
                        formName:$("#leche").serialize(),
                        id: iden ,
                        num: $('#inputClases').val(),
                        other:"attributes"
                    },function(data){
                    //the response is in the data variable
               
                    if(data.responseCode==300 ){           

                        var href="{{path('main')}}";
                        $("#wrap").css({"display":"block"});

                        
                        //$(location).attr('href',href); 
                    }
                    else if(data.responseCode==400){//bad request
                       alert('Error bad request');
                        }
                    else{                        
                        if(data.responseCode==500)
                        {
                            alert('Error bad request');
                        }
                        else alert("An unexpeded error occured.");
                        }
                    }
                    );
                    return false;
        });
        
        function add_lines()
        {
             var num = $('#inputClases').val();
                        var real = parseInt(num);
                        if(real==0)
                            alert("Ingrese número de clases");
                        else
                        {
                            $('#temas').empty();
                            for(var i=0;i<real;i++)
                            {
                                
                              $("<div class='control-group'>"+               
                                    "<label>Tema"+i+"</label>"+
                                    "<div class='controls'>"+
                                "<input type= 'text' class='input-xxlarge' id='tema"+i+"' name='tema"+i+"'/> </div></div>"
                                ).appendTo('#temas');
                            }
                            
                            $("<div class='control-group'>"+
                                    " <label>Subir temas</label>"+
                                    "<div class='controls'>"+
                                    "<input class='btn btn-small btn-primary' type='submit' name='tema' id='tema' value='Subir tema' /> </div></div>").appendTo('#temas');
       
                        }

        }
       
       </script>
