{% block content %}
<div class="span9" >
    <form class="form-horizontal" method="POST" id="myForm" name="myForm" action="{{path('administrar_clase_registrar')}}">

              <fieldset> 
                  <legend>Leche Espiritual</legend>
                  <div class="control-group">
                    <label class="control-label">Nombre</label>
                    <div class="controls">
                        <input class="input-xxlarge" type="text" name="nombre" id="nombre" pattern="|^[a-zA-Z ñÑáéíóúüç]*$|" required />
                    </div>
                  </div>
    
                  <div class="control-group">
                    <label class="control-label">Descripción</label>
                    <div class="controls">
                     
                    <textarea rows="5" id="inputDescripcion" name="inputDescripcion" class="input-xxlarge"> </textarea>
                    <p class="help-block">Descripción del docente</p>
                    
                    </div>
                  </div> 
                  
                  
                  <div class="control-group">
                  
                      <label class="control-label">Fecha Creación</label>
                      <div class="controls">
                        <input type= "text" class="mask_date input-medium" id="inputFecha" name="inputFecha"/>
                      </div>
                  </div>
               
                  
               <div class="control-group">
                  <label class="control-label">Número de clases</label>
                  <div class="controls">
                      <input class="input-medium" type="text" id="inputClases" name="inputClases"  value="0" pattern="[0-9]+" />
 
                  </div>
              </div>
  
              <div class="control-group">
                  <label class="control-label"></label>
                  <div class="controls">
                      <input class="btn btn-small btn-primary" type="submit" name="login" value="Crear Leche" />
                  </div>
              </div>
                  
              </fieldset>
              
              </form>
    
            <form id="leche" name="leche" action="{{path('administrar_tema_leche')}}" method="POST">
                <fieldset>
                    <div id="temas">
                  
                    </div>
                </fieldset>
            </form>
    
    
    <div id="wrap" name="wrap" >

            <h1>Escoja multiples archivos o arrestraelos hacia la zona de abajo</h1>

            <form id="uploadfile" action="" method="post" enctype="multipart/form-data" >
                <input type="file" id="fileField" name="fileField" multiple />
            </form>

            <div id="fileDrop">
                <p>Arrastre los archivos aquí</p>
            </div>

            <div id="files">
                <h2>Lista de archivos</h2>
                <a id="reset" href="#" title="Remover todos los archivos de la lista">Borre la lista</a>
                <ul id="fileList"></ul>
                <a id="upload" href="#" title="Cargar todos los archivos en lista">Cargar archivos</a>
               
            </div>
            
            <label id="lechesp" name="lechesp" ></label>
        </div>
              
        
 </div>    
 {% endblock %}
      
