         {%block javascript %}
           <script>
                $(function() {
		
		var addresspickerMap = $( "#addresspicker_map" ).addresspicker({
		  elements: {
		    map:      "#map",
		    lat:      "#lat",
		    lng:      "#lng"
		  }
		});
		var gmarker = addresspickerMap.addresspicker( "marker");
		gmarker.setVisible(true);
		addresspickerMap.addresspicker( "updatePosition");
		
                });
            </script>
            
             <script type="text/javascript">
                
    
                $(document).ready(function(){
           
                var le = $.getJSON('{{path('clm_paises')}}',paises);
                $("#paises_lista").change(recarga_regiones);
                
                var l = $.getJSON('{{path('clm_iglesia')}}',iglesias);
                 $.getJSON('{{path('clm_redes')}}',redes);

                });
                function redes(dato)
                {        
                     $('#red_lista').empty();
                    for(var i=0;i<dato.length;i++)
                    {
               
                    
                        $('<option value='+dato[i].id+'>'+dato[i].id+'</option>').appendTo('#red_lista');
                    }    
          
                }
                
                 function iglesias(datos)
                {
                    for(var i=0; i<datos.length ; i++)
                    {
                        $('<option value='+datos[i].id+'>'+datos[i].nombre+'</option>').appendTo('#iglesia_lista');
                    } 
                }
                
                function paises(datos)
                {
                    for(var i=0; i<datos.length ; i++)
                    {
                        $('<option value='+datos[i].id+'>'+datos[i].nombre+'</option>').appendTo('#paises_lista');
                    } 
                }
                
    
                function recarga_regiones()
                {
                 var name = $("#paises_lista option:selected").text();  
            
                 var route = '{{path('clm_regiones',{'name': 'nom'})}}';
            
                 var rutas = route.replace('nom',name);
         
            
                 $.getJSON(rutas,regiones);
                }
            
                function regiones(dato)
                {
                     $("#region_lista").empty();
            
                    for(var i=0;i<dato.length;i++)
                    {
                        $('<option value='+dato[i].id+'>'+dato[i].nombre+'</option>').appendTo('#region_lista');
                    }
                }
            
            </script>
            
