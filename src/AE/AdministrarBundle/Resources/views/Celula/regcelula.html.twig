                </select>
            </div>
        </div>
        
         <div class="control-group">
            
            <label>Ubicación</label>
            
         
            
                   <div class='input'>
                       <label>Address : </label> <input id="addresspicker_map" name="addresspicker_map" disabled="disabled"/>   <br/>
		
			<label>Latitud:      </label> <input id="lat" name="latitud" > <br/>
			<label>Longitud:      </label> <input id="lng" name="longitud"> <br/>
    </div>
    <div id="map"></div>
   
        </div>
            
