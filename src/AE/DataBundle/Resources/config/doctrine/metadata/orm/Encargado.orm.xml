<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Encargado" table="encargado">
    <field name="fechaObtencion" type="date" column="fecha_obtencion" nullable="false"/>
    <field name="activo" type="boolean" column="activo" nullable="true"/>
    <field name="fechaFin" type="date" column="fecha_fin" nullable="true"/>
    <one-to-one field="id" target-entity="Persona">
      <join-columns>
        <join-column name="id" referenced-column-name="id"/>
      </join-columns>
    </one-to-one>
    <many-to-many field="idAreaVision" target-entity="AreaVision" inversed-by="idEncargado">
      <join-table name="many_encargado_has_many_area_vision">
        <join-columns>
          <join-column name="id_encargado" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_area_vision" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
