        		}
    		
    		function Editar(classname){
        		$("."+classname).attr("disabled",false);
    		}
    		function EditarFecha(idnamelabel,idnameinput){
				$("#"+idnamelabel).text($("#"+idnameinput).val());
            }

    		function CheckChange(check,idname){
    			$("#"+idname).val(check.checked);
