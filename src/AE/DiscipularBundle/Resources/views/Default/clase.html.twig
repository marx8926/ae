{% block content %}

<div id="cursos">
</div>
<div class="row-fluid">
	<div class="span12">
		<div class="centro form-horizontal">
			<div class="control-group">
				<label class="control-label"><b>Curso:</b></label>
				<div class="controls">
					<label class="control-label">{{ curso }}</label>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label"><b>Docente:</b></label>
				<div class="controls">
					<label class="control-label">{{ docente }}</label>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label"><b>Tema:</b></label>
				<div class="controls">
					<label class="control-label">{{ tema }}</label>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label"><b>Fecha:</b></label>
				<div class="controls">
					<label id="fecha_dicto" class="control-label">{{ fechadicto }}</label>
				</div>
				<input type="button" value="Editar" onclick="$('#fechainput').focus()">
				<form id="EditFechaForm" action="{{ path('discipular_actualizar_fecha_clase') }}" methos="POST">
				<input type="date" id="fechainput" name="fecha" onchange="EditarFecha('fecha_dicto','fechainput')">
				<input type="hidden" name="idclase" value="{{idclase}}">
				<input type="submit" value="Guardar">
				</form>
			</div>
			
			<div class="control-group">
				<label class="control-label"><b>Archivo:</b></label>
				<div class="controls">
					<label class="control-label"><a href="/ae/web/{{ urlfile }}" target="_blank">{{ namefile }}</a></label>
				</div>
			</div>
		</div>
		
		<div class="box">
			<div class="box-head">
				<h3>Asistencia</h3>
			</div>
			<form id="ActualizarClaseForm" action="{{ path('discipular_editar_asistencia') }}" method="post">
			<div id = "tabla_asistencia" class="box-content box-nomargin">
			</div>
			<input type="hidden" name="idclase" value="{{idclase}}">
			<input type="button" value="Editar" onclick="Editar('modificable')">
			<input type="submit" value="Guardar">
			</form>
		</div>
		<form method="post" action="{{ path('discipular_lista_clases') }}">
		<input type="hidden" name="datos" value="{{ idasignacion }}"> 
		<input type="submit" value="Atras">
		</form>
	</div>
</div>

