    <script type="text/javascript">
	    $(document).ready(function() {
	    	ajaxResposeData("tabla_clases","{{ path('_tabla_asignacion_clases',{'idasignacion':''}) }}/{{idasignacion}}");

	    	$("#pdfPersonal").click(function(event) {
	            $("#TablaPersonal th").css("width","auto");
	        	$("#content").val($("#TablaPersonal").html());
	        	$("#title").val($("h3").html());
	            $("#ExportForm").attr("action", "{{asset('extensiones/exportpdf.php')}}");
		 		$("#ExportForm").submit();
	        });

	        $("#excelPersonal").click(function(event) {
	        	$("#content").val("<table>" + $("#TablaPersonal").html() + "</table>");
				$("#ExportForm").attr("action", "{{asset('extensiones/exportexcel.php')}}");
				$("#ExportForm").submit();
	        });

	    	TablaPersonal = $('#TablaPersonal').dataTable({
				"bProcessing": true,
				"bServerSide": false,
				"bDestroy": true,
				"sAjaxSource": '{{path("_tabla_estudiantes_curso",{"curso":""})}}'+'/{{idasignacion}}',
				"aoColumns": [
			            { "mDataProp": "id" },
	                    { "mDataProp": "nombre" },
	                    { "mDataProp": "apellidos" },
	                    { "mDataProp": "red" },
	                    { "mDataProp": "celula" },
	                    { "mDataProp": "inicio"},
	                    { "mDataProp":"fin"}
			                ],
				"aaSorting": [ [0,'asc'], [1,'asc'] ],
				"aoColumnDefs": [
		        	{ "sType": 'string-case', "aTargets": [ 2 ] }],
				"sDom": 'T<"clear">lfrtip',
		        "oTableTools": {
					"sRowSelect": "single",
		            "fnRowSelected": function ( node ) {
		            	var s=$(node).children();
		                alert("Selected Row : " + s[0]);
		            }
				},
				"sDom": "<'row'<'span8'l><'span8'f>r>t<'row'<'span8'i><'span8'p>>",
				"sPaginationType": "bootstrap",
				"oLanguage": {
					"sLengthMenu": "_MENU_ registros por p√°gina"
				}
			});
		});

	    function IrAClase(boton){
    		$("#idclase").val($(boton).attr("data"));
    		$("#IrAClaseForm").submit();
    	}
    </script>             
