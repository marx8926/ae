{% extends "::base.html.twig" %}

{% block stylesheets %}

	<link href="{{asset('css/bootstrap.css')}}" media="screen" rel="stylesheet" type="text/css">
    <link href="{{asset('css/style.css')}}" media="screen" rel="stylesheet" type="text/css">
    <link href="{{asset('css/bootstrap-responsive.css')}}" media="screen" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="{{asset('css/DT_bootstrap.css')}}">  

{% endblock %}

{% block content %}
<div class="span9" >
	<div class="box">
		<div class="box-head tabs">
            <h3>Temas del Curso (Nombre del Curso)</h3>						
        </div>

        <div class="box-content box-nomargin">
        	<form id='ExportForm' method='POST'>
        		<input id='content' type='hidden' name='content' >
                <input id='title' type='hidden' name='title' >
                <input id='pdfMiembros' type='button' value='PDF' class="btn-success">
                <input id='excelMiembros' type='button' value='Excel' class="btn-success">
            </form>
		    <table cellpadding="0" cellspacing="0" border="0" class="display table table-striped dataTable table-bordered"  id="TablaMiembros" name="TablaMiembros">
		        <thead>
		            <tr>
						<th>ID</th>
						<th>Tema</th>
						<th>Fecha</th>
						<th>Asistencia</th>
		            </tr>
				</thead>
				<tbody id="tablas1" name="tablas1" ></tbody>
		    </table>
		</div>
	</div>
	<form  method="POST" id="RegPersonalForm" action='{{path('discipular_registrar_personal')}}'>
		<div class="form-horizontal">
			<input id="idMiembro" type="hidden" name="id">
			<input type='button' class="btn-success" disabled="true" id="registro" name="registro" value="Registrar">
		</div>
	</form>
	<div class="box">
		<div class="box-head tabs">
            <h3>Administrar Alumnos</h3>						
        </div>
        <div class="box-content box-nomargin">
        	<form id='PersonalExportForm' method='POST'>
                <input id='pdfPersonal' type='button' value='PDF' class="btn-success">
                <input id='excelPersonal' type='button' value='Excel' class="btn-success">
            </form>
		    <table cellpadding="0" cellspacing="0" border="0" class="display table table-striped dataTable table-bordered"  id="TablaPersonal" name="TablaPersonal">
		    	<thead>
		            <tr>
						<th>ID</th>
						<th>Nombres</th>
						<th>Apellidos</th>
						<th>Red</th>
						<th>Estado</th>
		                <th>Inicio</th>
		                <th>Fin</th>
		        	</tr>
				</thead>
				<tbody id="tablas2" name="tablas2" ></tbody>
		    </table>
		</div>
	</div>
	<form  method="POST" id="EliminarPersonalForm" action='{{path('discipular_eliminar_personal')}}'>
		<div class="form-horizontal">
			<input id="idPersonalEliminar" type="hidden" name="id">
			<input type="submit" class="btn-success" id="enviar" name="enviar" value="Eliminar">
		</div>
	</form>
	
	
</div>

{% endblock %}