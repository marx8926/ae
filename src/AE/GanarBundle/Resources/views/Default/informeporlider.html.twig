    <script type="text/javascript">
 
         var trselected; 
	 var oTable;
         
        var values = [];
         
         function recargar_celula()
         {
             
         }
	$(document).ready(function() {
            
            
             var rede = '{{red}}' ;
                                      
             if(rede.length > 0)
             {
                 $("<option value='"+rede+"'>"+rede+"</option>").appendTo('#red_lista');
             }
             else
             initRed('{{path('servicio_red_sin')}}');
            
        
             $('#select').css({'display':'none'});
             
             
            $(".rango").change(function(){
                
                var net = $('#red_lista option:selected').val();
                var year = $('#year_lista option:selected').val();
                
                year = year+'-01-01';
                
                console.log(net);
                console.log(year);
                
                var url = "{{path('servicio_nuevos_por_red',{'red':'net','inicio':'ini'})}}";
                url = url.replace('net',net);
                url = url.replace('ini',year);
                
                if(net!='-1')
                {
                    var ruta = "{{path('servicio_red_encargado',{'id':'net'})}}";
                    ruta = ruta.replace('net', net);
                    
                    $.ajax(
                        {url : ruta,
                         dataType:"json",
                        type: "POST",
                        async: false,
                        }
                        ).done(function(data){
                                for(var i=0; i<data.length; i++)
                                {
                                    $('#titulo_informe').text('Informe Ganar: '+data[i].id+'-'+data[i].nombres)                                    
                                }
                        });
                    
                     get_tabla(url);
                }
                else $('#titulo_informe').text('Informe Ganar');
            });


            $("#pdfbutton").click(function(event) {
                $("#persona th").css("width","auto");
            	$("#content").val($("#persona").html());
            	$("#title").val($("h3").html());
            	//$("#content").val($("#lol").html() + $("tbody").html());
                $("#form").attr("action", "{{asset('extensiones/exportpdf.php')}}");
		 		$("#form").submit();
            });

            $("#excelbutton").click(function(event) {
            	$("#content").val("<table>" + $("#persona").html() + "</table>");
		$("#form").attr("action", "{{asset('extensiones/exportexcel.php')}}");
		$("#form").submit();
            });
        
            $('#persona tbody').click(function(event){
                $(oTable.fnSettings().aoData).each(function(){
                    $(this.nTr).removeClass('row_selected');
                });
                
                $(event.target.parentNode).addClass('row_selected');
                
                trselected = $(event.target.parentNode);
                
                var tds = $(trselected).find('td');
                
                values = [];
  
                $.each(tds, function(index, item) {
                    values.push(item.innerHTML); 
                }); 
                $('#select').css({'display':'block'});
            });
            
	 });
         
         
         function get_tabla(url)
         {
               /* Build the DataTable with third column using our custom sort functions */
            oTable = $('#persona').dataTable( {
                                    
                "bProcessing": true,
                "bServerSide": false,
                "bDestroy": true,
                "sAjaxSource": url,
                "aoColumns": [
                    { "mDataProp": "id" },
                    { "mDataProp": "nombres" },
                    { "mDataProp": "edad" },
                    { "mDataProp": "dni" },
                    { "mDataProp": "estado" },
                    { "mDataProp": "telefono"},
                    { "mDataProp": "visita"},
                    { "mDataProp":"direccion"},
                    { "mDataProp": "referencia"},
                    { "mDataProp": "conversion"},
                    { "mDataProp": "peticion"},
                    { "mDataProp": "lugar"}
                ],
		"aaSorting": [ [9,'desc']],//por consultar el tipo de orden
		"aoColumnDefs": [
                    { "sType": 'string-case', "aTargets": [ 2 ] }
		],"sDom": 'T<"clear">lfrtip',
                "oTableTools": {
			"sRowSelect": "single",
                        "fnRowSelected": function ( node ) {
                            var s=$(node).children();
                            alert("Selected Row : " + s[0]);
                        }
		},
                "sDom": "<'row'<'span8'l><'span8'f>r>t<'row'<'span8'i><'span8'p>>",
					"sPaginationType": "bootstrap",
					"oLanguage": {
						"sLengthMenu": "_MENU_ registros por página"
					}
            } );	
         }
      
       </script>
