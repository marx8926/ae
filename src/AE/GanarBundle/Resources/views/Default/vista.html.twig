{%block javascript %}
           
            
            <script type="text/javascript">
                
            var latitud = 0;
            var longitud = 0;
            
            $(document).ready(function(){
                
            //recuperar los datos
                        var codigo = {{id}};
             //nombres
                 
                        url = '{{path( 'servicio_persona_id', {'id':'cod'} )}}';
                        ruta = url.replace('cod',codigo);
                        $.ajax(
