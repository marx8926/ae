	</section>
</body>
{%block javascript %}
           
<script src="{{asset('js/jquery.js')}}"></script>
<script type="text/javascript">
                
            var latitud = 0;
            var longitud = 0;
            
            $(document).ready(function(){

            	$("#pdfbutton").click(function(event) {
                	$("#content").val($("#todo").html());
                	$("#title").val("{{nombre}}" + " " + "{{apellidos}}");
                    $("#form").attr("action", "{{asset('extensiones/exportpdf-perfil.php')}}");
    		 		$("#form").submit();
                });
                
            //recuperar los datos
                        var codigo = {{id}};
                        init();
         
                        //nuevo convertido
                        url = '{{path( 'servicio_nuevo_convertido_id', {'id':'cod'} )}}';
                        ruta = url.replace('cod',codigo);
                        $.ajax(
                            {   url : ruta,
                                dataType:"json",
                                type: "POST",
                                async: false,
                            }
                        ).done(convertido);
                            
                         //red social
                         /*
                        url = '{{path( 'servicio_red_social', {'id':'cod'} )}}';
                        ruta = url.replace('cod',codigo);
                        $.ajax(
                            {   url : ruta,
                                dataType:"json",
                                type: "POST",
                                async: false,
                            }
                        ).done(sociales);
                        */
                
            });
            
            function init()
            {
                 if({{estado_civil}} ==0)
                 {  
                         $("#estado").html('<strong>Estado: </strong>Solter@'); //$("#estado").text('Solter@');
                 }                     
                 else {
                         $('#estado').html('<strong>Estado: </strong>Casad@');  //$('#estado').text('Casad@');
                 }
                 
                  //sexo
                  if({{sexo}}==1)
                     {
                         $('#sexo').html('<strong>Sexo: </strong>Masculino'); //$('#sexo').text('Masculino');
                     }   
                    else
                     {
                         $('#sexo').html('<strong>Sexo: </strong>Femenino'); //$('#sexo').text('Femenino');
                     }   
                     
                  mapa({{latitud}}, {{longitud}});
            }

            function convertido(dato)
             {
                 if(dato!=false)
                 {
                   
                      
                    var url = '{{path('servicio_lugar_id',{'id':'cod'}) }}';
                    var ruta = url.replace('cod',dato.id_lugar);
                    
                       
                    $.ajax(
                            {   url : ruta,
                                dataType:"json",
                                type: "GET",
                                async: false,
                            }
                        ).done(lugar);
                                             
                 }
             }
             function lugar(dato)
             {
                $('#lugar').html('<strong>Lugar: </strong>' + dato[0].nombre);
             }
             
             function mapa(latitud, longitud)
             {
                  var ruta ="https://maps.googleapis.com/maps/api/staticmap?zoom=15&size=700x400&maptype=roadmap&markers=color:blue%7Clabel:S%7C"+latitud+','+longitud+"&sensor=false&key=AIzaSyCSLn3MOXmjCshXPj48FhUFg94X9ZgQZgA";
                         
                 var imagen = '<img src="'+ruta+'">'
                 
                 $(imagen).appendTo('#ubicacionexacta');
             }
            </script>
            
{% endblock %}
</html>