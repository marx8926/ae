			<div class="map">
            	<div id="ubicacionexacta" name="ubicacionexacta">
				</div>
			</div>
		</div>
			<div class="botones">
				<input class="submit" type="button" id="pdfbutton" name="imprimir" value="Imprimir" />
				<input class="submit" type="button" id="salir" name="salir" value="Salir" />
