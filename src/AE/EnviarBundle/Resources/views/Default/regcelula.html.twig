               $(document).ready(function(){
                   
                   //lista de iglesias
                        $.ajax(
                        {url : '{{path('servicio_iglesia')}}',
                         dataType:"json",
                        type: "POST",
                        async: false,
                        }
                        ).done(iglesias);
                 
           
                          //lista de redes
                     $.ajax(
                        {url : '{{path('servicio_red')}}',
                         dataType:"json",
                        type: "POST",
                        async: false,
                        }
                      ).done(redes);
           
            
                       //lista de departamentos
                        $.ajax(
                        {url : '{{path('servicio_region')}}',
                         dataType:"json",
                        type: "POST",
                        async: false,
                        }
                        ).done(departamentos);
                 
    
                        
                        //lista de lugares
                      //  $.getJSON('{{path('servicio_lugar')}}',lug);
                 
    
                        //cambio de departamento
                        $("#departamento_lista").change(recarga_provincias);
                  
                        //cambio de provincia
                        $("#provincia_lista").change(recarga_distritos);
              
                   
                        $("#red_lista").change(recargar_celula);
                    
                    var x =$("login");
                    x.click();
           
                    $("#myForm").submit(function(){
                    //get the url for the form
