{%block content %}
            <div class="span9" id="registro_form">
                <form class="form-horizontal" action="{{path('enviar_temacelula_updated')}}"  method="POST" id="myForm" name="myForm">
                    <legend>Registro de tema Célula</legend>
        
                    <fieldset> 
                        <div class="control-group">
                            <label class="control-label" >Titulo</label>
                            <div class="controls">
                                <input type="text" id="titulo" name="titulo" placeholder="Titulo" class="input-xxlarge">
                            </div>
                        </div>
            
                        <div class="control-group">
                            <label class="control-label" >Autor</label>
                            <div class="controls">
                                <input type="text" id="author" name="author" placeholder="Autor" class="input-xxlarge">
                            </div>
                        </div>
                            
                        <div class="control-group">
                            <label class="control-label" >Descripción</label>
                            <div class="controls">
                                <textarea rows="5" id="descripcion" name="descripcion" placeholder="Descripción" class="input-xxlarge" required=""> </textarea>
                            </div>
                        </div>
                            
                        <div class="control-group">
                            <label class="control-label">Archivo</label>
                            <div class="controls">
                                <input type="file" name="file0" class="fileup">
                                <input type="hidden" name="filename0" class="name">
                            </div>
                        </div>
   
                    </fieldset>
                    <input type="button" value="enviar" id="cargar">
            </form>
                    
{% endblock %}
     
