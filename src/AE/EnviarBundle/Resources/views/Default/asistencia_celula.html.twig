{% block content %} 
<div class="span9" >

	<div class="box">
		<div class="box-head tabs">
            <h3>Asistencia de Célula</h3>							
        </div>

        <div class="box-content box-nomargin">
            <form id='form' name='form' method='POST' class="form-horizontal" >
                
                <fieldset>
                    
                 <div class="control-group">
                     <label class="control-label">ID Clase Célula</label>
                     <div class="controls">
                         <label class="control-label">{{id}}</label>
                         <input type="hidden" value="{{id}}" id="claseid" name="claseid">
                     </div>
                 </div>
                
                <div class="control-group">
                        <label class="control-label" >Célula</label>
                        <div class="controls">
                            <label id="celula" class="control-label" >{{celula}}</label>
                        </div>
                </div>
                 
                <div class="control-group">
                    <label class="control-label" >Tema Célula</label>
                    <div class="controls">
                        <label id="tema_celula" class="control-label">{{titulo}}</label>
                    </div>
                </div>
                    
                 <div class="control-group">
                    <label class="control-label" >Tipo de Célula</label>
                    <div class="controls">
                        <label id="tipo_celula" class="control-label">{{tipo}}</label>
                    </div>
                </div>
                 
                <div class="control-group">
                    <label class="control-label" >Horario</label>
                    <div class="controls">
                        <label id="horario" class="control-label" >{{dia}}</label>
                    </div>
                </div>
                 
                <div class="control-group">
                    <label class="control-label" >Ofrenda</label>
                    <div class="controls">
                        <input class="input-xlarge" id="ofrenda" name="ofrenda" value="{{ofrenda}}">
                    </div>
                </div>
          
                </fieldset>
            
                <div class="span9">
		<div class="box">
			<div class="box-head">
				<h3>Células</h3>
			</div>
                        <input id='content' type='hidden' name='content' >
                        <input id='title' type='hidden' name='title' >
                        <input id='pdfbutton' type='button' value='PDF' class="btn-success">
                        <input id='excelbutton' type='button' value='Excel' class="btn-success">
                        <input id='numfilas' type="hidden" name="numfilas" value="0">
			<div class="box-content box-nomargin" id="tabla_asistencia">
			</div>
		</div>
                </div>
                
                
                <div class="form-horizontal">
                    <input class="btn-success" id="guardar" name="guardar" type="button" value="Guardar cambios">
                </div>

                </form>
    	</div>
	</div>
       
        
</div>    
                 
