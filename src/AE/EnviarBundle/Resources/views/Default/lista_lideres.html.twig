	$(document).ready(function() {
            
            FechaActualT('inicio');
            FechaActualT('fin');
            
            
                //lista de redes
            $.ajax(
                        {url : '{{path('servicio_red')}}',
                         dataType:"json",
                        type: "POST",
                        async: false,
                        }
            ).done(function(dato){
                
                    for(var i=0;i<dato.length;i++)
                    {
                        $('<option value='+dato[i].id+'>'+dato[i].id+'-'+dato[i].nombre+' '+dato[i].apellidos+'</option>').appendTo('#red_lista');
                    }
            }); 
     

            $('#ocultar').css({'display':'none'});
            
        
            $('#rang').click(function(event){
                event.preventDefault();
                var rede =$('#red_lista').val();
                var url = '{{path('_enviar_lista_lideres_celula_tabla',{'id':':iden'}) }}';
                url = url.replace(':iden',rede);
                console.log(url);

                cargar_tabla(url);                
               
            });
            
            $("#pdfbutton").click(function(event) {
                $("#persona th").css("width","auto");
        	$("#content").val($("#persona").html());
        	$("#title").val($("h3").html());
        	//$("#content").val($("#lol").html() + $("tbody").html());
                $("#form").attr("action", "{{asset('extensiones/exportpdf.php')}}");
	 		$("#form").submit();
            });

            $("#excelbutton").click(function(event) {
        	$("#content").val("<table>" + $("#persona").html() + "</table>");
                $("#form").attr("action", "{{asset('extensiones/exportexcel.php')}}");
                $("#form").submit();
            });

	 });
         
         function cargar_tabla(url)
         {
              /* Build the DataTable with third column using our custom sort functions */
            oTable = $('#persona').dataTable( {
                                    
                "bProcessing": true,
                "bServerSide": false,
                "bDestroy": true,
                "sAjaxSource": url,
                "aoColumns": [
                    { "mDataProp": "id_red" },
                    { "mDataProp": "nombre" },
                    { "mDataProp": "apellidos" },
                    { "mDataProp": "id" },
                    {"mDataProp": "fecha"}
                ],
		"aaSorting": [ [0,'asc'] ],
		"aoColumnDefs": [
                    { "sType": 'string-case', "aTargets": [ 2 ] }
		],"sDom": 'T<"clear">lfrtip',
