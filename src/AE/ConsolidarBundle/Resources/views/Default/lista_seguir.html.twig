        function get_tabla(url)
        {
            /* Build the DataTable with third column using our custom sort functions */
            oTable = $('#persona').dataTable( {           
            	"bProcessing": true,
                "bServerSide": false,
                "bDestroy": true,
                "sAjaxSource": url,
                "aoColumns": [
                    { "mDataProp": "id" },
                    { "mDataProp": "nom" },
                    { "mDataProp": "ap" },
                    { "mDataProp": "red" },
                    { "mDataProp": "cell"},
                    {"mDataProp":"conid"},
                    { "mDataProp":"inicio"},
                    { "mDataProp":"pausa"},
                    { "mDataProp": "reanuda" },
                    { "mDataProp": "nombre" },
                    { "mDataProp": "apellidos"}
                ],
		"aaSorting": [ [0,'asc'], [1,'asc'] ],
		"aoColumnDefs": [
                    { "sType": 'string-case', "aTargets": [ 2 ] }
		],
                "sScrollY": "200px",
                "bPaginate": false,
                "bScrollCollapse": true,
